
'Q:テキストの処理にはいらないのはなぜ
'テキスト
Sub TextBox1()

     Dim nowdate As Date
     
    '日付を取得して変数に格納
    'nowdate = Format(Date, "yyyymmdd")
    nowdate = Data()
    
    
    '初期値のプロパティを設定する
    Me.TextBox1.Value = nowdate
    
    
End Sub

'前日ボタン
Sub daybefore_Click()
    
     Dim nowdate As Date
    
    'テキストのnowdateを使って処理したい
    nowdate = Data()  '←必要ないはず
    
    '1日前の日付を取得したい
    'Me.TextBox1.Value = DateAdd("d", -1, Date)
    
    
    'nowdateを使って前日を取得
    '作成したパスを引数として渡してあげる
    ' 昨日の日付を取得
    nowdate = Date - 1
    Debug.Print (nowdate)
    
    nowdate = DateAdd("nowdate", -1, Date)
    Debug.Print (nowdate)
    
    
    'output()を呼び出して出力する
    'call output（引数）
   
End Sub



Sub nextday_Click()

     Me.TextBox1.Value = DateAdd("d", -1, Date)
     
End Sub
